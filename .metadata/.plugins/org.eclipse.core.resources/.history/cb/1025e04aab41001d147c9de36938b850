package sample;

import java.util.Scanner;

public class Calculator {

	public static void main(String[] args) {
		
		try {
		String wishOption = "Y";
		Scanner sc = new Scanner(System.in);
		System.out.println("Press 1 for Add, 2 for Subtraction, 3 for multiplication, 4 for division,"
				+ "5 To calculate X% of Y" + "6 To Find What Percentage of Y is X" +
				"7 Find % of increase or descrease from X to Y" + "8 To Exit");
		
		while (wishOption.equalsIgnoreCase("Y")) {
			System.out.println("Enter Operation");
			System.out.println("1.Add");
			System.out.println("2.Subtract");
			System.out.println("3.Multiplication");
			System.out.println("4.Division");
			System.out.println("5 To calculate X% of Y");
			System.out.println("6 To Find What Percentage of Y is X");
			System.out.println("7 To % of increase or descrease from X to Y");
			System.out.println("8 Exit");
			
			int operation = sc.nextInt();
			System.out.println("Enter First Number");
			int number1 = sc.nextInt();
			System.out.println("Enter Second Number");
			int number2 = sc.nextInt();

			if (operation < 0 || operation > 5)
				System.out.println("Invalid Operation");

			switch (operation) {
			case 1:
				int additionResult = number1 + number2;
				System.out.println(number1 + " + " + number2 + " = " + additionResult);
				break;
			case 2:
				int subtractionResult = number1 - number2;
				System.out.println(number1 + " - " + number2 + " = " + subtractionResult);
				break;
			case 3:
				int multiplicationResult = number1 * number2;
				System.out.println(number1 + " * " + number2 + " = " + multiplicationResult);
				break;
			case 4:
				int divisionResult = number1 / number2;
				System.out.println(number1 + " / " + number2 + " = " + divisionResult);
				break;
			case 5:
				System.exit(0);
			}
			
			System.out.println("Wish to continue(Y/N)");
			wishOption = sc.next();
			
			if(wishOption.equalsIgnoreCase("N"))
				System.exit(0);

		}
		}
		catch(Exception ex)
		{
			if(ex instanceof java.util.InputMismatchException )
			{
				System.out.println("Invalid Input Detected, Please enter numbers only.");
			}
			else
			{
				System.out.println(String.format("Runtime exception occured", ex.getMessage()));
			}
		}
	}
	
	

}
